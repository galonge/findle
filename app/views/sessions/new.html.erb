<% provide(:title, 'Log In') %>
<h2>Log In</h2>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.submit "Log In", class: "btn btn-primary" %>

		<% end %>

		<p>New user?  <%= link_to "Sign up now!", signup_path %></p>

	</div>

</div>
